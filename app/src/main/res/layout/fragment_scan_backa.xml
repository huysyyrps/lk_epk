<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_back_color"
        android:orientation="horizontal"
        tools:context=".activity.MainActivity">

    <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

            <TextView
                    style="@style/tvTitle"
                    android:text="闸门" />
            <com.example.lk_epk.view.BaseButton
                    android:id="@+id/btnGate"
                    style="@style/BaseButton"
                    app:bg_color="@color/theme_color"
                    app:bg_corner="5dp"
                    app:bg_client="false"
                    android:text="自动" />

            <TextView
                    style="@style/tvTitle"
                    android:text="平均等级" />
            <com.example.lk_epk.view.BaseButton
                    android:id="@+id/btnLeave"
                    style="@style/BaseButton"
                    app:bg_color="@color/theme_color"
                    app:bg_corner="5dp"
                    app:bg_client="false"
                    android:text="2" />

            <TextView
                    style="@style/tvTitle"
                    android:text="材料类型" />

            <com.example.lk_epk.view.BaseButton
                    android:id="@+id/btnMaterialType"
                    style="@style/BaseButton"
                    android:layout_height="19dp"
                    android:text="碳钢"
                    app:bg_color="@color/theme_color"
                    app:bg_corner="5dp"
                    app:bg_client="false"/>

            <TextView
                    style="@style/tvTitle"
                    android:text="声速(m/s)" />
            <com.example.lk_epk.view.BaseButton
                    android:id="@+id/btnAudioSpeed"
                    style="@style/BaseButton"
                    app:bg_color="@color/theme_color"
                    app:bg_corner="5dp"
                    app:bg_client="false"
                    android:text="3254.0" />


            <TextView
                    style="@style/tvTitle"
                    android:text="检波方式" />
            <com.example.lk_epk.view.BaseButton
                    android:id="@+id/btnWaveType"
                    style="@style/BaseButton"
                    app:bg_color="@color/theme_color"
                    app:bg_corner="5dp"
                    app:bg_client="false"
                    android:text="射频波" />

            <TextView
                    style="@style/tvTitle"
                    android:text="范围扩展" />
            <com.example.lk_epk.view.BaseButton
                    android:id="@+id/btnRangeAdd"
                    style="@style/BaseButton"
                    app:bg_color="@color/theme_color"
                    app:bg_corner="5dp"
                    app:bg_client="false"
                    android:text="1X" />

            <TextView
                    style="@style/tvTitle"
                    android:text="工作温度" />
            <com.example.lk_epk.view.BaseButton
                    android:id="@+id/btnWorkTemp"
                    style="@style/BaseButton"
                    app:bg_color="@color/theme_color"
                    app:bg_corner="5dp"
                    app:bg_client="false"
                    android:text="25" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>